<!--<?xml version="1.0" encoding="utf-8"?>-->
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2">
    <ScrollView
            android:background="@color/white"
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/childLinear3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <Switch
                    android:textColor="@color/black"
                    android:id="@+id/switch_imu"
                    android:background="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:text="记录IMU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/recordButton"
                    android:onClick="startRecord"
                    android:layout_gravity="center"
                    android:text="开始记录"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/mybutton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <TextView
                android:onClick="reloadThreshold"
                android:id="@+id/reloadGNSS"
                android:layout_gravity="center"
                android:text="刷新线程"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/mybutton"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
<!--            <TextView-->
<!--                android:layout_gravity="center"-->
<!--                android:text="保存文件"-->
<!--                android:gravity="center"-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="12sp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginEnd="20dp"-->
<!--                android:layout_marginStart="20dp"-->
<!--                android:background="@drawable/mybutton"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="40dp"/>-->
            <TextView
                    android:textColor="@color/text"
                    android:layout_marginEnd="@dimen/textView_Margin_lr"
                    android:layout_marginStart="@dimen/textView_Margin_lr"
                    android:gravity="center"
                    android:text="时钟"
                    android:textSize="@dimen/textView_size"
                    android:background="@drawable/my_textview"
                    android:layout_marginTop="@dimen/headMargin"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textView_hieght"/>
            <TextView
                    android:textColor="@color/textColor"
                    android:layout_marginEnd="@dimen/textView_Margin_lr"
                    android:layout_marginStart="@dimen/textView_Margin_lr"
                    android:id="@+id/clockView"
                    android:paddingStart="10dp"
                    android:background="@drawable/my_textview"
                    android:layout_marginTop="@dimen/measurChildTopMange"
                    android:padding="@dimen/myTextPadding"
                    android:textSize="@dimen/childTextSize"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                android:paddingStart="9dp"
                android:paddingEnd="9dp"
                android:paddingBottom="9dp"
                android:paddingTop="9dp"
                android:background="@drawable/my_textview"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginEnd="@dimen/margin_top"
                android:layout_marginStart="@dimen/margin_top"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <!--
                <org.angmarch.views.NiceSpinner
                        app:textTint="@color/black"
                        android:textSize="10sp"
                        android:text="GPS"
                        android:id="@+id/selectType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>-->
                <Spinner
                    android:entries="@array/spinner"
                    android:textSize="10sp"
                    android:id="@+id/selectType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                    android:textColor="@color/text"
                    android:layout_marginEnd="@dimen/textView_Margin_lr"
                    android:layout_marginStart="@dimen/textView_Margin_lr"
                    android:gravity="center"
                    android:text="卫星测量"
                    android:textSize="@dimen/textView_size"
                    android:background="@drawable/my_textview"
                    android:layout_marginTop="@dimen/headMargin"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textView_hieght"/>
            <!--
                android:fontFamily="casual"
                android:textStyle="bold"
            -->
            <TextView
                android:background="@drawable/my_textview"
                android:padding="@dimen/myCustomTextPadding"
                android:layout_marginStart="@dimen/textView_Margin_lr"
                android:layout_marginEnd="@dimen/textView_Margin_lr"
                android:layout_marginTop="@dimen/measurChildTopMange"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/customTextSize"
                android:textColor="@color/textColor"
                android:id="@+id/custom_measureText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                    android:background="@drawable/my_textview"
                    android:padding="@dimen/myTextPadding"
                    android:layout_marginStart="@dimen/textView_Margin_lr"
                    android:layout_marginEnd="@dimen/textView_Margin_lr"
                    android:layout_marginTop="@dimen/measurChildTopMange"
                    android:layout_marginBottom="20dp"
                    android:textSize="@dimen/customTextSize"
                    android:textColor="@color/textColor"
                    android:id="@+id/measureText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>