<!--<?xml version="1.0" encoding="utf-8"?>-->

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <FrameLayout
            android:visibility="gone"
            android:layout_marginBottom="60dp"
            android:layout_marginStart="0dp"
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/linearBaidu"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="0dp">
        </LinearLayout>
        <ImageView
                android:src="@drawable/tolocation"
                android:onClick="loadNowLocation"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20sp"
                android:layout_gravity="end|bottom"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        <ImageView
                android:onClick="writeData"
                android:src="@drawable/download"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="right"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        <TextView
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:id="@+id/baiduInfText"
                android:alpha="0.8"
                android:textSize="15sp"
                android:background="@drawable/baidumaptextview"
                android:layout_marginEnd="100dp"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </FrameLayout>
    <ScrollView
            android:visibility="visible"
            android:layout_marginBottom="60dp"
            android:background="@color/white"
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/linear2Child"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginEnd="@dimen/textView_Margin_lr"
                    android:layout_marginStart="@dimen/textView_Margin_lr"
                    android:background="@drawable/my_textview"
                    android:textColor="@color/text"
                    android:gravity="center"
                    android:textSize="@dimen/textView_size"
                    android:text="@string/text1"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textView_hieght"/>
            <!--<com.github.mikephil.charting.charts.CombinedChart
                    android:id="@+id/combiedChart"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/combinedSize"
                    android:layout_height="@dimen/combinedSize"/>-->
            <TextView
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="@dimen/textView_Margin_lr"
                    android:layout_marginStart="@dimen/textView_Margin_lr"
                    android:background="@drawable/my_textview"
                    android:textColor="@color/text"
                    android:gravity="center"
                    android:textSize="@dimen/textView_size"
                    android:text="@string/text2"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textView_hieght"/>

        </LinearLayout>
    </ScrollView>
    <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp">
        <com.google.android.material.tabs.TabItem
                android:text="地图"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <com.google.android.material.tabs.TabItem
                android:text="参考"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </com.google.android.material.tabs.TabLayout>
</androidx.constraintlayout.widget.ConstraintLayout>